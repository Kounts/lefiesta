<h1>These are all registred events</h1>

<%= link_to '+', new_event_path %>
<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Theme</th>
    <th>Date</th>
    <th>Location</th>
    <th>Description</th>
  </tr>
 
  <% @events.each do |event| %>
    <tr>
      <td><%= event.id %></td>
      <td><%= event.title %></td>
      <td><%= event.theme %></td>
      <td><%= event.date %></td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td><%= link_to 'See', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Delete', event_path(event),method: :delete, data:{confirm: 'Are you sure you want to delete this event ?'} %></td>
    </tr>
  <% end %>
</table>