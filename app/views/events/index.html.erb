<h1>These are all registred events</h1>

<%= link_to '+', new_event_path, {:class => "btn btn-success"} %>

<div class="row">
<%= div_for(@events, class: "panel panel-success col-xs-offset-3") do |event|%>
   <%= div_for(event, class: "panel-heading") do %>
      <h3><%= event.title %></h3>
   <% end %>
   <%= div_for(event, class: "panel-body") do %>
   <ul>
    <li><%= event.theme %></li>
      <li><%= event.date %></li>
      <li><%= event.location %></li>
     <li> <%= event.description %></li>
    </ul>
   <% end %>
<% end %>
</div>

<table class="table">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Theme</th>
    <th>Date</th>
    <th>Location</th>
    <th>Description</th>
  </tr>
 
  <% @events.each do |event| %>
    <tr class= <%=  (event.date.future? ? 'active' : ('success' if event.date.today?)) if event.date.present? %>>
      <td><%= event.id %></td>
      <td><%= event.title %></td>
      <td><%= event.theme %></td>
      <td><%= event.date %></td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td><%= link_to 'See', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Delete', event_path(event),method: :delete, data:{confirm: 'Are you sure you want to delete this event ?'} %></td>
    </tr>
  <% end %>
</table>